{
  "title": "Fractal VSM - Cost Tracking & Budget Monitoring",
  "uid": "fractal-cost-tracking",
  "tags": ["fractal", "cost", "budget"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "editable": true,
  "panels": [
    {
      "id": 1,
      "title": "Hourly Cost Rate",
      "type": "stat",
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "fractal_cost_hourly_rate_usd",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "currencyUSD",
          "decimals": 2,
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": 0, "color": "green" },
              { "value": 50, "color": "yellow" },
              { "value": 100, "color": "red" }
            ]
          }
        }
      }
    },
    {
      "id": 2,
      "title": "Daily Total Cost",
      "type": "stat",
      "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "fractal_cost_daily_total_usd",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "currencyUSD",
          "decimals": 2,
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": 0, "color": "green" },
              { "value": 500, "color": "yellow" },
              { "value": 1000, "color": "red" }
            ]
          }
        }
      }
    },
    {
      "id": 3,
      "title": "Hourly Budget Utilization",
      "type": "gauge",
      "gridPos": { "x": 12, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "fractal_cost_budget_utilization_percent{window=\"hourly\"}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 150,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": 0, "color": "green" },
              { "value": 70, "color": "yellow" },
              { "value": 90, "color": "orange" },
              { "value": 100, "color": "red" }
            ]
          }
        }
      }
    },
    {
      "id": 4,
      "title": "Daily Budget Utilization",
      "type": "gauge",
      "gridPos": { "x": 18, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "fractal_cost_budget_utilization_percent{window=\"daily\"}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 150,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": 0, "color": "green" },
              { "value": 70, "color": "yellow" },
              { "value": 90, "color": "orange" },
              { "value": 100, "color": "red" }
            ]
          }
        }
      }
    },
    {
      "id": 5,
      "title": "Cost by Tier",
      "type": "piechart",
      "gridPos": { "x": 0, "y": 4, "w": 8, "h": 8 },
      "targets": [
        {
          "expr": "fractal_cost_by_tier_usd",
          "legendFormat": "{{tier}}",
          "refId": "A"
        }
      ],
      "options": {
        "legend": { "displayMode": "table", "placement": "right" },
        "pieType": "pie",
        "displayLabels": ["percent"]
      }
    },
    {
      "id": 6,
      "title": "Cost by Provider",
      "type": "piechart",
      "gridPos": { "x": 8, "y": 4, "w": 8, "h": 8 },
      "targets": [
        {
          "expr": "fractal_cost_by_provider_usd",
          "legendFormat": "{{provider}}",
          "refId": "A"
        }
      ],
      "options": {
        "legend": { "displayMode": "table", "placement": "right" },
        "pieType": "pie",
        "displayLabels": ["percent"]
      }
    },
    {
      "id": 7,
      "title": "Cost by Model",
      "type": "piechart",
      "gridPos": { "x": 16, "y": 4, "w": 8, "h": 8 },
      "targets": [
        {
          "expr": "fractal_cost_by_model_usd",
          "legendFormat": "{{provider}}/{{model}}",
          "refId": "A"
        }
      ],
      "options": {
        "legend": { "displayMode": "table", "placement": "right" },
        "pieType": "pie",
        "displayLabels": ["percent"]
      }
    },
    {
      "id": 8,
      "title": "Cost Over Time (1h window)",
      "type": "graph",
      "gridPos": { "x": 0, "y": 12, "w": 24, "h": 8 },
      "targets": [
        {
          "expr": "sum(rate(fractal_llm_cost_usd_total[5m])) * 3600",
          "legendFormat": "Total Cost Rate ($/hr)",
          "refId": "A"
        },
        {
          "expr": "sum by (tier) (rate(fractal_llm_cost_usd_total[5m])) * 3600",
          "legendFormat": "{{tier}}",
          "refId": "B"
        }
      ],
      "yaxes": [{ "format": "currencyUSD", "label": "Cost per Hour" }, { "format": "short" }],
      "legend": { "show": true, "alignAsTable": true, "values": true, "avg": true, "current": true }
    },
    {
      "id": 9,
      "title": "Input vs Output Token Costs",
      "type": "graph",
      "gridPos": { "x": 0, "y": 20, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "sum(rate(fractal_llm_cost_usd_total{token_type=\"input\"}[5m])) * 3600",
          "legendFormat": "Input Tokens ($/hr)",
          "refId": "A"
        },
        {
          "expr": "sum(rate(fractal_llm_cost_usd_total{token_type=\"output\"}[5m])) * 3600",
          "legendFormat": "Output Tokens ($/hr)",
          "refId": "B"
        }
      ],
      "yaxes": [{ "format": "currencyUSD", "label": "Cost per Hour" }, { "format": "short" }],
      "legend": { "show": true, "alignAsTable": true, "values": true }
    },
    {
      "id": 10,
      "title": "Token Usage (Input vs Output)",
      "type": "graph",
      "gridPos": { "x": 12, "y": 20, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "rate(fractal_llm_tokens_input_total[5m])",
          "legendFormat": "Input - {{model}}",
          "refId": "A"
        },
        {
          "expr": "rate(fractal_llm_tokens_output_total[5m])",
          "legendFormat": "Output - {{model}}",
          "refId": "B"
        }
      ],
      "yaxes": [{ "format": "short", "label": "Tokens/sec" }, { "format": "short" }],
      "legend": { "show": true, "alignAsTable": true, "values": true }
    },
    {
      "id": 11,
      "title": "Cost Alerts",
      "type": "stat",
      "gridPos": { "x": 0, "y": 28, "w": 8, "h": 4 },
      "targets": [
        {
          "expr": "sum(fractal_cost_alerts_total)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "decimals": 0,
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": 0, "color": "green" },
              { "value": 1, "color": "yellow" },
              { "value": 5, "color": "red" }
            ]
          }
        }
      }
    },
    {
      "id": 12,
      "title": "Cache Hit Rate (Cost Savings)",
      "type": "graph",
      "gridPos": { "x": 8, "y": 28, "w": 16, "h": 4 },
      "targets": [
        {
          "expr": "(sum(rate(fractal_llm_cache_hits_total[5m])) / sum(rate(fractal_llm_calls_total[5m]))) * 100",
          "legendFormat": "Cache Hit Rate %",
          "refId": "A"
        }
      ],
      "yaxes": [{ "format": "percent", "label": "Cache Hit Rate", "min": 0, "max": 100 }, { "format": "short" }],
      "legend": { "show": true },
      "thresholds": [
        { "value": 20, "colorMode": "critical", "op": "lt", "fill": true, "line": true },
        { "value": 50, "colorMode": "custom", "op": "gt", "fill": false, "line": true, "fillColor": "rgba(50, 200, 50, 0.4)" }
      ]
    },
    {
      "id": 13,
      "title": "Cost Efficiency (Cost per 1K Tokens)",
      "type": "graph",
      "gridPos": { "x": 0, "y": 32, "w": 24, "h": 8 },
      "targets": [
        {
          "expr": "(sum by (model) (rate(fractal_llm_cost_usd_total[5m])) / (sum by (model) (rate(fractal_llm_tokens_input_total[5m]) + rate(fractal_llm_tokens_output_total[5m])))) * 1000",
          "legendFormat": "{{model}} ($/1K tokens)",
          "refId": "A"
        }
      ],
      "yaxes": [{ "format": "currencyUSD", "label": "Cost per 1K Tokens" }, { "format": "short" }],
      "legend": { "show": true, "alignAsTable": true, "values": true, "avg": true, "current": true }
    }
  ],
  "templating": {
    "list": []
  },
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": ["5s", "10s", "30s", "1m", "5m"]
  }
}
